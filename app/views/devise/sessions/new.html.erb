<container class="form-container">
  <div class="form-div-2">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => "email",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "field" } %>
        <%= f.input :password, :label => "password",
                    required: false,
                    input_html: { autocomplete: "current-password", class: "field" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <a class="text-standard" href="/users/password/new" class=bold>forgot your password ?</a>

      <div class="form-actions sign-in-button">
        <%= f.button :submit, "sign in" %>
      </div>
      <div class="text-standard">
        don't have an account yet ? <a href="/users/sign_up" class=bold>sign up here</a>
      </div>
    <% end %>

  </div>
</container>
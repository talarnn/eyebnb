<h1>Profiles#dashboard</h1>
  <h2><%= link_to "Create a new pair", new_pair_path %></h2>
  <hr>

  <h2>Glasses I want to wear</h2>

  <ul>
    <% @profile_bookings.each do |booking| %>
      <li><%= booking.pair.title %> - status : <%= booking.status %></li>
    <% end %>
  </ul>

  <hr>

  <h2>My glasses' booking</h2>

  <ul>
    <% @profile_pairs.each do |pair| %>
        <li>
          <%= pair.title if pair.bookings %>
        </li>
    <% end %>
  </ul>

  <hr>

  <h2>My pairs</h2>

  <ul>
    <% @profile_pairs.each do |pair| %>
        <li>
          <%= link_to pair.title, pair_path(pair)  %>
        </li>
    <% end %>
  </ul>


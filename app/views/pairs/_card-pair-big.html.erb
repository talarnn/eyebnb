<div class="pair-card-big">
  <% if pair.picture?  %>
      <div class="pair-card-big-picture" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)),
             url('<%= cl_image_path pair.picture %>')">
      </div>
    <% else  %>
      <div class="pair-card-big-picture" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)),
             url('<%= image_url 'pair-placeholder.png' %>')">
      </div>
    <% end %>
  <div class ="pair-card-big-body">
    <div class="pair-card-big-infos">
      <h4 class="blue-font right-align"><%= @pair.price %> â‚¬/day</h4>
      <h4 class="red-font capitalize bold"><%= @pair.brand %></h4>
      <h4><%= pair.title %></h4>
      <p><%= @pair.description %></p>
      <p class="bold blue-font centered">correction: <%= pair.correction_type %> </p>
      <div class="pair-card-index-correction">
        <div class="bold blue-font">L: <%= pair.left_eye_correction %></div>
        <div class="bold blue-font">R: <%= pair.right_eye_correction %></div>
      </div>
    </div>
    <div class="pair-card-big-controls">
      <%= link_to "Book it", new_pair_booking_path(@pair), class: "btn btnyellow w-200" %>
      <%= link_to "Edit", edit_pair_path(@pair), class: "btn secondaryblue w-200" %>
      <%= link_to "Delete", pair_path(@pair), method: :delete, class: "btn btnred w-200" %>
    </div>
  </div>
  <div class="small-avatar abs-lefttop" style="background-image:
         url('<%= image_path pair.profile.profile_pic %>')">
  </div>
  <% if pair.profile.profile_pic?  %>
      <div class="small-avatar abs-lefttop" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)),
             url('<%= cl_image_path pair.profile.profile_pic %>')">
      </div>
    <% else  %>
      <div class="small-avatar abs-lefttop" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)),
             url('<%= image_url 'user-placeholder.png' %>')">
      </div>
    <% end %>
</div>

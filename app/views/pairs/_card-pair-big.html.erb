<div class="container">
  <div class ="card-product">
    <img class="product-img" src="https://images.unsplash.com/photo-1502929254524-5e4f51903baa?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60">
    <div class="card-product-infos">
      <h2><%= @pair.brand %></h2>
      <p><%= @pair.title %></p>
      <p>Correction: <%= @pair.correction_type %></p>
      <p class="side side1">L <%= @pair.left_eye_correction %></p>
      <p class="side side2">R <%= @pair.right_eye_correction %></p>
      <p></p><%= link_to "Book it", new_pair_booking_path(@pair.id) %>
    </div>
    <img class="small-avatar" src="<%= @pair.profile.profile_pic %>">
  </div>
  </div>
</div>



